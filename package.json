{
  "name": "@emd-cloud/sdk",
  "version": "1.13.2",
  "type": "module",
  "types": "dist/index.d.ts",
  "description": "Use EMD Cloud SDK to integrate with your Node.js applications",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "EMD",
    "Cloud",
    "SDK",
    "Integration"
  ],
  "scripts": {
    "test": "vitest run",
    "test:types": "vitest run --typecheck",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "typecheck": "tsc --noEmit",
    "prettier:formatting": "npx prettier --write ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EMD-Cloud/sdk.git"
  },
  "author": "Polevov Evgenii <epolevov@emd.one>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EMD-Cloud/sdk/issues"
  },
  "release": {
    "branches": [
      "main"
    ],
    "repositoryUrl": "https://github.com/EMD-Cloud/sdk.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/EMD-Cloud/sdk#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^24.6.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "tus-js-client": "^4.3.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "uuid": "^13.0.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "tus-js-client": "^4.3.1",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
